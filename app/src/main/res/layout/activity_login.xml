<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/img">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#F3F6F8"
        android:text="Đăng nhập " />

    <EditText
        android:id="@+id/taikhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_margin="15dp"
        android:hint="Nhập tài khoản "
        android:textColor="#F8F8F6"
        android:textColorHint="#F8F5F6"
        android:lines="1"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/matkhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="15dp"
        android:hint="Nhập mật khẩu "
        android:inputType="textPassword"
        android:textColor="#F8F8F6"
        android:lines="1"
        android:textColorHint="#F8F8F6"
        android:minHeight="48dp" />


    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button

            android:layout_marginRight="30dp"
            android:id="@+id/nutdangky"
            android:backgroundTintMode="screen"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:background="@drawable/rounded_corners"
            android:text="ĐĂNG KÝ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/nutdangnhap"
            android:text="ĐĂNG NHẬP "
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:backgroundTintMode="screen"
            android:backgroundTint="@color/green"
            android:textColor="@color/black"
            android:background="@drawable/rounded_corners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_marginTop="100dp"
        android:text="THOÁT"
        android:backgroundTintMode="screen"
        android:backgroundTint="@color/red_balck"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corners"
        android:id="@+id/nutthoat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

